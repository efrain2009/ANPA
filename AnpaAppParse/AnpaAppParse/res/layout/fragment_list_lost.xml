<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal" android:layout_margin="10dp">

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">
        
    <TextView
        android:id="@+id/txt_list_title_lost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="15sp"
        android:padding="10dp"
        android:text="@string/txt_list_title_lost"/>

    <ListView
        android:id="@+id/list_lost"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ListView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        
    <Button
        android:id="@+id/btn_add_lost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_add_lost"
        android:layout_centerHorizontal="true"
        android:background="@color/red"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/txt_add_lost"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
	</LinearLayout>
</LinearLayout>
</RelativeLayout>
       
